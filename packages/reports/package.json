{
  "name": "@akademate/reports",
  "version": "0.0.1",
  "private": true,
  "description": "PDF and Excel report generation for Akademate",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@react-pdf/renderer": "^4.3.0",
    "exceljs": "^4.4.0",
    "date-fns": "^4.0.0",
    "date-fns-tz": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "react": "^19.0.0",
    "typescript": "^5.9.0",
    "vitest": "^2.1.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  }
}
